{
  "manifest_version": 3,
  "name": "Deodorant",
  "version": "1.1",
  "description": "Replaces occurrences of 'Elon Musk' or 'Musk' with a user-defined word.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
